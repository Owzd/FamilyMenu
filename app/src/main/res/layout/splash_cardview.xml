<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/padding_20"
    android:layout_gravity="center"
    android:id="@+id/cardview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <TextView
            android:id="@+id/menu_title"
            style="@style/menu_txt_20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_20"
            android:text="极致调料"/>

        <ImageView
            android:id="@+id/menu_img"
            android:layout_width="200dp"
            android:layout_height="123dp"
            android:layout_centerInParent="true"
            android:src="@drawable/splash_tiaoliao"/>

        <TextView
            android:id="@+id/menu_detail"
            style="@style/menu_txt_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingEnd="@dimen/padding_20"
            android:paddingStart="@dimen/padding_20"
            android:padding="@dimen/fab_margin_bottom"
            android:text="美味的调料，美味的饭菜，调料好才能饭香，所以买我们的调料，做一顿好吃的饭，我们懂你"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>